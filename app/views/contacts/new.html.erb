<div align="center">
  <h3>Send A message to Us</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
      <%= f.input :name, :required => true, class:'form-control', placeholder: 'Enter name ...' %>
      <%= f.input :email, :required => true, class: 'form-control', placeholder: 'Type in email address...' %>
      <%= f.input :message, :as => :text, :required => true, class: 'form-control', placeholder: 'Type in message...' %>
      <div class= "hidden">
        <%= f.input :nickname, :hint => 'Leave this field blank!' %>
      </div>
      <div>
        </br>
        <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
      </div>
  <% end %>
</div>

